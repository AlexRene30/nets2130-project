#!/bin/bash

# Kinnect Project Startup Script
# Starts both backend and frontend servers

echo "ğŸš€ Starting Kinnect project..."

# Try to load nvm if it exists
if [ -s "$HOME/.nvm/nvm.sh" ]; then
    echo "ğŸ“¦ Loading nvm..."
    export NVM_DIR="$HOME/.nvm"
    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
    [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"
fi

# Try to find Node.js in common locations
if ! command -v node &> /dev/null; then
    # Check Homebrew locations
    if [ -f "/opt/homebrew/bin/node" ]; then
        export PATH="/opt/homebrew/bin:$PATH"
    elif [ -f "/usr/local/bin/node" ]; then
        export PATH="/usr/local/bin:$PATH"
    fi
fi

# Check if Node.js is available
if ! command -v node &> /dev/null; then
    echo "âŒ Error: Node.js is not installed or not in PATH"
    echo ""
    echo "To install Node.js, you can use one of these methods:"
    echo ""
    echo "1. Using Homebrew (recommended):"
    echo "   brew install node"
    echo ""
    echo "2. Using nvm (Node Version Manager):"
    echo "   curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.0/install.sh | bash"
    echo "   Then restart your terminal and run: nvm install node"
    echo ""
    echo "3. Download from: https://nodejs.org/"
    echo ""
    exit 1
fi

# Check if npm is available
if ! command -v npm &> /dev/null; then
    echo "âŒ Error: npm is not installed or not in PATH"
    exit 1
fi

echo "âœ… Found Node.js $(node --version) and npm $(npm --version)"

# Install dependencies if needed
echo "ğŸ“¦ Checking dependencies..."

if [ ! -d "backend/node_modules" ]; then
    echo "Installing backend dependencies..."
    cd backend && npm install && cd ..
fi

if [ ! -d "frontend/node_modules" ]; then
    echo "Installing frontend dependencies..."
    cd frontend && npm install && cd ..
fi

# Function to cleanup on exit
cleanup() {
    echo ""
    echo "ğŸ›‘ Shutting down servers..."
    kill $BACKEND_PID $FRONTEND_PID 2>/dev/null
    exit
}

trap cleanup SIGINT SIGTERM

# Start backend server
echo "ğŸ”§ Starting backend server on port 4000..."
cd backend
npm start > ../backend.log 2>&1 &
BACKEND_PID=$!
cd ..

# Wait a moment for backend to start
sleep 2

# Start frontend server
echo "âš›ï¸  Starting frontend server..."
cd frontend
npm run dev > ../frontend.log 2>&1 &
FRONTEND_PID=$!
cd ..

echo ""
echo "âœ… Servers starting..."
echo "ğŸ“ Backend PID: $BACKEND_PID"
echo "ğŸ“ Frontend PID: $FRONTEND_PID"
echo ""
echo "ğŸŒ Backend: http://localhost:4000"
echo "ğŸŒ Frontend: http://localhost:5173 (or check frontend.log for actual port)"
echo ""
echo "ğŸ“‹ Logs:"
echo "   - Backend:  tail -f backend.log"
echo "   - Frontend: tail -f frontend.log"
echo ""
echo "Press Ctrl+C to stop both servers"

# Wait for both processes
wait
